{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "osx": {
                "command": "g++",
                "args": [
                    "-std=c++17",
                    "-stdlib=libc++",
                    "${file}",
                    "-o",
                    "${workspaceFolder}/debug/main.out",
                    "--debug"
                ]
            },
            "linux": {
                "command": "g++",
                "args": [
                    "-g",
                    "-std=c++11",
                    "${file}",
                    "-o",
                    "${workspaceFolder}/debug/main.out"
                ],
            },
            "windows": {
                "command": "g++",
                "args": [
                    "-g",
                    "-std=c++11",
                    "${file}",
                    "-o",
                    "${workspaceFolder}/debug/main.exe",
                ],
            },
            // "windows": {
            //     "command": "cl.exe",
            //     "args": [
            //         "/EHsc",
            //         "/Zi",
            //         "/Fd:",
            //         "${workspaceFolder}/debug/",
            //         "/Fo:",
            //         "${workspaceFolder}/debug/",
            //         "/Fe:",
            //         "${workspaceFolder}/debug/main.exe",
            //         "${file}"
            //     ],
            // },
            // "dependsOn": ["Clean"],
            "group": {                     
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "osx": {
                "command": "rm",
                "args": [
                    "-rf",
                    "${workspaceFolder}/debug/*",
                    "-v",
                    ".gitkeep"
                ]
            },
            "linux": {
                "command": "rm",
                "args": [
                    "-rf",
                    "${workspaceFolder}/debug/*",
                    "-v",
                    ".gitkeep"
                ]
            },
            "windows": {
                "command": "Remove-Item",
                "args": [
                    "-Recurse",
                    "'${workspaceFolder}\\debug'",
                    "-Exclude",
                    ".gitkeep"
                ],
            },
            "problemMatcher": []
        },
    ]
}